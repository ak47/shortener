= form_for(@shorty) do |f|
  - if @shorty.errors.any?
    #error_explanation
      %h2
        = pluralize(@shorty.errors.count, "error")
        prohibited this shorty from being saved:
      %ul
        - @shorty.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :url
    %br/
    = f.text_area :url
  .actions
    = f.submit
